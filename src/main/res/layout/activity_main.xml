<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/result_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="61dp"
        android:gravity="end"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_layout"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="#292525"
        android:textSize="35dp" />
"
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#5C5E675E"
        android:id="@+id/button_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                style="@style/operatorbutton"
                android:onClick="onClearClick"
                android:layout_width="76dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#302C2C"
                android:text="C"
                android:textColor="#E8594F"
                android:textSize="35dp"
                app:cornerRadius="360dp"
                tools:ignore="MissingClass" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_back"
                style="@style/digitbutton"
                android:onClick="onBackClick"
                android:layout_width="76dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#302C2C"
                app:icon="@drawable/baseline_backspace_24"
                app:iconTint="#0CD114"
                android:textSize="35dp"
                app:cornerRadius="360dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_module"
                android:onClick="onOperatorClick"
                style="@style/operatorbutton"
                android:layout_width="76dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#302C2C"
                android:text="%"
                android:textColor="#39E441"
                android:textSize="35dp"
                app:cornerRadius="360dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                android:onClick="onOperatorClick"
                style="@style/operatorbutton"
                android:layout_width="76dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#302C2C"
                android:text="/"
                android:textColor="#39E441"
                android:textSize="35dp"
                app:cornerRadius="360dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">

            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_7"
                android:onClick="onDigitClick"
                android:backgroundTint="#302C2C"
                android:text="7"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_8"
                android:onClick="onDigitClick"
                android:backgroundTint="#302C2C"
                android:text="8"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_9"
                android:onClick="onDigitClick"
                android:backgroundTint="#302C2C"
                android:text="9"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                android:onClick="onOperatorClick"
                style="@style/operatorbutton"
                android:layout_width="76dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#302C2C"
                android:text="*"
                android:textColor="#39E441"
                android:textSize="35dp"
                app:cornerRadius="360dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">

            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_4"
                android:onClick="onDigitClick"
                android:backgroundTint="#302C2C"
                android:text="4"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_5"
                android:onClick="onDigitClick"
                android:backgroundTint="#302C2C"
                android:text="5"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_6"
                android:onClick="onDigitClick"
                android:backgroundTint="#302C2C"
                android:text="6"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/operatorbutton"
                android:textSize="35dp"
                android:textColor="#39E441"
                android:layout_margin="12dp"
                android:id="@+id/button_plus"
                android:onClick="onOperatorClick"
                android:backgroundTint="#302C2C"
                android:text="+"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">

            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_1"
                android:onClick="onDigitClick"
                android:backgroundTint="#302C2C"
                android:text="1"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_2"
                android:onClick="onDigitClick"
                android:backgroundTint="#302C2C"
                android:text="2"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_3"
                android:onClick="onDigitClick"
                android:backgroundTint="#302C2C"
                android:text="3"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/operatorbutton"
                android:textSize="35dp"
                android:textColor="#39E441"
                android:layout_margin="12dp"
                android:id="@+id/button_minus"
                android:onClick="onOperatorClick"
                android:backgroundTint="#302C2C"
                android:text="-"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">

            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="21dp"
                android:textColor="#E8594F"
                android:layout_margin="12dp"
                android:id="@+id/button_ac"
                android:onClick="onAllClearClick"
                android:backgroundTint="#302C2C"
                android:text="AC"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_0"
                android:onClick="onDigitClick"
                android:backgroundTint="#302C2C"
                android:text="0"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_dot"
                android:onClick="onDigitClick"
                android:backgroundTint="#302C2C"
                android:text="."/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/operatorbutton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_equals"
                android:onClick="onEqualClick"
                android:backgroundTint="#CB1DDC25"
                android:text="="/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>